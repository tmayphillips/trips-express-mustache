<html>
<head></head>


<body>

  <h3>Trips</h3>

<!-- starting of the loop -->
  {{#tripList}}

    <div>{{title}}</div><br>
    <div><img src='{{image}}' width="200" height="200" /></div><br>
    <div>Departure: {{dateDepart}}</div><br>
    <div>Return: {{dateReturn}}</div>

<!-- creating forms so we can submit tripId for deletion -->
  <form action='/deleteTrip' method='post'>
    <input type="hidden" name="tripId" value='{{tripId}}' />
    <input type="submit" value="Delete" />
  </form>

  {{/tripList}}

  <a href="/add-trip">Enter New Trip</a>

  <form action='/logout' method='post'>
    <input type='submit' value='Logout'/>
  </form>


</body>
</html>
